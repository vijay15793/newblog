<%= form_for([@post, @post.comments.build],{:user_id => current_user.id}) do |f| %>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field" >
    <%= f.label :body %><br />
    <%= f.text_area :body ,:cols => 10, :rows => 3%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>